<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Add Books</title>
	<link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
	<!-- header section -->
	<header>
		<h1>Book Store</h1>
		<nav>
	  	<ul class="nav">
	  		<li><h1><a href="/">Home</a></h1></li>
	  		<li><h1><a href="/books">Add Book</a></h1></li>
	  		<li><h1><a href="/authors">Add Author</a></h1></li>
	  		<li><h1><a href="/authors/show-authors">Authors</a></h1></li>
	  		<li><h1><a href="/users/login">SignIn</a></h1></li>
	  		<li><h1><a href="/users/register">SignUp</a></h1></li>
	  	</ul>
  	</nav>
	</header>
	
	<!-- form section -->
	<form action="/books" method="POST" class="form">
		<input type="text" name="title" placeholder="Book title" />
		<textarea type="text" rows="8" name="description" placeholder="description"></textarea>
		<input type="Number" name="pages" placeholder="Pages" />
		<input type="date" name="created" />
		<input type="text" name="tags" placeholder="Tags" />
		<select name="author" required >
			<option> Select an author </option>
			<% authors.forEach(author => { %>
			  	<option value="<%= author._id %>"><%= author.name %></option>
			<% }) %>
		</select>
		<input id="sub-btn" type="submit" value="ADD BOOKS" />	
	</form>
</body>
</html>